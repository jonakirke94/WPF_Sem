<Window x:Class="WPF_SmartList.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_SmartList"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Margin="284,321,0,0" VerticalAlignment="Top" Width="159" Height="49" Cursor="Hand" Click="submit_login"/>
        <TextBox HorizontalAlignment="Left" x:Name="txt_email" Height="39" Margin="284,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="159" FontSize="22"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="284,130,0,0" VerticalAlignment="Top" Width="159" Height="36" FontSize="22"/>
        <Label Content="Password&#xD;&#xA;" HorizontalAlignment="Left" Margin="284,215,0,0" VerticalAlignment="Top" Width="159" Height="36" FontSize="22"/>
        <PasswordBox HorizontalAlignment="Left" x:Name="txt_password" Margin="284,266,0,0" VerticalAlignment="Top" Width="159" Height="40" FontSize="22"/>
        <Label Content="" x:Name="lbl_error" HorizontalAlignment="Left" Margin="284,390,0,0" VerticalAlignment="Top" Width="159" Height="32"/>





    </Grid>
</Window>

<Page x:Class="WPF_SmartList.Pages.Units"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SmartList.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="800"
      Title="Units">

    <Grid>
        <Label Content="Oversigt over brug af enheder" HorizontalAlignment="Center" Margin="242,35,214,0" VerticalAlignment="Top" Height="68" Width="auto" FontSize="22" FontWeight="Bold"/>
        <DataGrid x:Name="dg_units" HorizontalAlignment="Left" Height="auto" Margin="149,108,0,0" VerticalAlignment="Top" Width="auto" SelectionChanged="dg_units_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding UnitId}" Header="#" MinWidth="100" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Navn" MinWidth="300"/>
                <DataGridTextColumn Binding="{Binding Count}" Header="Antal" MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Page>

<Page x:Class="WPF_SmartList.Categories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SmartList"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="800"
      Title="Categories">

    <Grid>
        <Label Content="Oversigt over brug af kategorier" HorizontalAlignment="Center" Margin="228,35,216,0" VerticalAlignment="Top" Height="68" Width="356" FontSize="22" FontWeight="Bold"/>
        <DataGrid x:Name="dg_categories" HorizontalAlignment="Left" Height="auto" Margin="149,108,0,0" VerticalAlignment="Top" Width="auto" SelectionChanged="dg_categories_SelectionChanged" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding CatId}" Header="#" MinWidth="100" />
                <DataGridTextColumn Binding="{Binding Name}" Header="Navn" MinWidth="300"/>
                <DataGridTextColumn Binding="{Binding Count}" Header="Antal" MinWidth="100"/>
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Page>

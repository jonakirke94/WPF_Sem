<Page x:Class="WPF_SmartList.Categories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_SmartList"
      mc:Ignorable="d" 
      d:DesignHeight="565" d:DesignWidth="800"
      Title="Categories">

    <Grid>
        <Label Content="Top used categories" HorizontalAlignment="Left" Margin="291,35,0,0" VerticalAlignment="Top" Height="68" Width="204" FontSize="22"/>
        <DataGrid x:Name="dg_categories" HorizontalAlignment="Left" Height="380" Margin="149,108,0,0" VerticalAlignment="Top" Width="500" SelectionChanged="dg_categories_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="#" MinWidth="100" />
                <DataGridTextColumn Header="Name" MinWidth="300" />
                <DataGridTextColumn Header="Count" MinWidth="100" />
            </DataGrid.Columns>
        </DataGrid>



    </Grid>
</Page>
